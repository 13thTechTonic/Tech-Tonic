<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="p-2 duration-100 rounded select-none first bg-project-blue-main text-project-white hover:bg-project-blue-dark">
  <%= link_to_unless current_page.first?, "回到第一頁".html_safe, url, remote: remote %>
</span>
