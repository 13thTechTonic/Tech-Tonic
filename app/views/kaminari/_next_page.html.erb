<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="p-2 ml-4 duration-100 rounded select-none next bg-project-blue-main text-project-white hover:bg-project-blue-dark">
  <%= link_to_unless current_page.last?, "下一頁", url, rel: 'next', remote: remote %>
</span>
