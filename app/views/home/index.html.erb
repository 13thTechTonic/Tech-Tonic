<div class="flex">
  <aside class="w-[196px] bg-project-white p-4 h-fit mx-8 rounded-lg shadow-md">
    <% if current_user %>
      <h3 class="text-xl font-bold">追蹤的標籤</h3>
      <ul>
        <% current_user.tags.each do |tag| %>
          <li class="my-4">
            <%= link_to "# #{tag.name}", tag_path(id: tag.id), class:"text-lg" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <h3 class="text-xl font-bold">歡迎加入TechTonic！</h3>
    <% end %>
  </aside>
  
  <div>
    <%= render partial: "post_card", collection: @posts, as: :post %>
    <%= paginate @posts %>
  </div>
</div>