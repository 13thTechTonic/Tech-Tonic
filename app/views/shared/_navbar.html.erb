<nav class="sticky top-0 z-50 flex items-center justify-between w-full h-16 px-6 bg-white shadow">
  
  <!-- 左側 logo -->
  <%= link_to root_path, draggable: "false", class: "flex items-center" do %>
    <%= image_tag 'image/logo.png', size: "140x40", alt: "TechTonic", class: " select-none col-span-2 max-h-12 w-full object-contain lg:col-span-1"%>
  <% end %>



<!-- 搜尋框 -->
<div class="flex items-center justify-center flex-1 px-4 mr-96 ">
  <form class="relative w-60">
      <input type="text" name="keyword" value="<%= params[:keyword] %>" class="w-full h-10 px-4 border border-gray-400 rounded-md hover:border-gray-700" placeholder="搜索...">
      <input type="submit" value="" class="absolute top-0 right-0 flex items-center justify-center w-10 h-full text-gray-600 border-l border-l-gray-400 hover:cursor-pointer rounded-r-md">
        <i class="absolute fa-solid hover:cursor-pointer fa-magnifying-glass top-3 right-3"></i>
      </input>
  </form>
</div>




  <!-- 右側的 CTA -->
  <% if user_signed_in? %>
    
    <%= link_to  "新增文章",new_post_path, class:"inline-block px-4 py-2 mr-4 text-blue-900 border border-blue-900 rounded-md order-blue-500 hover:bg-blue-900 hover:text-white", method: "GET" %>

    <%= link_to  "文章列表", posts_path, class:"inline-block px-4 py-2 rounded-md text-slate-600 hover:shadow-md" %>
    <%= link_to "個人設定", edit_user_registration_path %>
    <%= link_to  "登出", destroy_user_session_path, data: { turbo_method: "delete" }, class:"inline-block px-4 py-2 rounded-md text-slate-600 hover:shadow-md" %>

  <% else %>

  <div class="flex">
    <%= link_to  "登入", new_user_session_path, class:"inline-block px-4 py-2 mr-4 text-blue-900 border border-blue-900 rounded-md order-blue-500 hover:bg-indigo-900 hover:text-white" %>
    <%= link_to  "註冊", new_user_registration_path, class:"inline-block px-4 py-2 rounded-md bg-text-700 hover:shadow-md hover:text-indigo-900" %>
  </div>

  <% end %>

  <!-- 手機版的漢堡選單 -->
  <div class="flex items-center md:hidden">
    <button class="text-gray-800 hover:text-gray-900 focus:outline-none focus:text-gray-900" aria-label="Toggle menu">
      <svg viewBox="0 0 24 24" class="w-6 h-6 fill-current">
        <path fill-rule="evenodd" d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
</nav>