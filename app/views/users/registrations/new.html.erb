<section
  class="flex flex-col items-center w-full max-w-md p-2 mx-auto mb-12 -mt-12 bg-gray-200 border-2 border-black rounded-lg"
>
  
  <h2 class="my-8 text-3xl">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "container flex flex-col items-center") do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="relative mt-8 field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full h-12 text-lg border-0 rounded-lg focus:ring-0 focus:border-current peer", placeholder: " " %>
      <%= f.label :email, class: "absolute flex items-center w-full h-12 pl-4 text-xl text-gray-400 duration-200 scale-50 -top-3 cursor-text -left-24 peer-placeholder-shown:scale-100 peer-placeholder-shown:top-0 peer-placeholder-shown:left-0 peer-focus:scale-50 peer-focus:-left-24 peer-focus:-top-3" %>
    </div>

    <div class="relative mt-8 field">
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full h-12 text-lg border-0 rounded-lg focus:ring-0 focus:border-current peer", placeholder: " " %>
      <%= f.label :password, class: "absolute flex items-center w-full h-12 pl-4 text-xl text-gray-400 duration-200 scale-50 -top-3 cursor-text -left-24 peer-placeholder-shown:scale-100 peer-placeholder-shown:top-0 peer-placeholder-shown:left-0 peer-focus:scale-50 peer-focus:-left-24 peer-focus:-top-3" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="relative mt-8 field">
      <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "w-full h-12 text-lg border-0 rounded-lg focus:ring-0 focus:border-current peer", placeholder: " " %>
      <%= f.label :password_confirmation, class: "absolute flex items-center w-full h-12 -left-24 pl-4 text-base text-gray-400 duration-200 scale-50 -top-3 cursor-text peer-placeholder-shown:scale-100 peer-placeholder-shown:top-0 peer-placeholder-shown:left-0 peer-focus:scale-75 peer-focus:-left-12 peer-focus:-top-3" %>
    </div>

    

    <div class="w-full actions">
      <%= f.submit "Sign up", class: "w-full h-12 mt-8 text-base duration-200 bg-gray-400 rounded-lg hover:bg-gray-600 cursor-pointer" %>
    </div>
  <% end %>
  
  <div class="container mt-8">
    <div
      class="flex items-center before:w-0 before:flex-grow before:content-[''] before:h-0.5 before:bg-black after:flex-grow after:content-[''] after:h-0.5 after:w-0 after:bg-black"
    >
      or
    </div>
  </div>
  
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "flex items-center justify-center w-full h-12 mt-4 text-base text-gray-400 duration-200 bg-gray-600 rounded-lg hover:bg-gray-800 px-4" %>
    <% end %>
  <% end %>



  <a
    href=""
    class="flex items-center justify-center w-1/2 h-12 mt-4 text-base text-gray-400 duration-200 bg-gray-600 rounded-lg hover:bg-gray-800"
    >Google</a
  >
  <a
    href=""
    class="flex items-center justify-center w-1/2 h-12 mt-4 text-base text-gray-400 duration-200 bg-gray-600 rounded-lg hover:bg-gray-800"
    >GitHub</a
  >
  <a
    href=""
    class="flex items-center justify-center w-1/2 h-12 mt-4 text-base text-gray-400 duration-200 bg-gray-600 rounded-lg hover:bg-gray-800"
    >Facebook</a
  >

  <div class="container my-4">
    <div
      class="flex items-center before:w-0 before:flex-grow before:content-[''] before:h-0.5 before:bg-black after:flex-grow after:content-[''] after:h-0.5 after:w-0 after:bg-black"
    >
      Already have an account?&nbsp;
      <%= link_to "Log in", new_user_session_path, class: "font-medium cursor-pointer" %>
    </div>
  </div>
</section>
