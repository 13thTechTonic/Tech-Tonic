            <label for="username" class="text-xl">Username:</label>
            <input
              id="username"
              class="col-span-2 border-none rounded focus:ring-0 sm:w-full"
              type="text"
            />
          </div>
          <button class="p-2 mt-4 bg-gray-400 rounded sm:mt-0">
            Update username
          </button>
        </form>
        <!-- /username -->
        <!-- E-mail -->
        <form
          class="container flex flex-col items-center p-4 mt-4 bg-gray-200 border-4 border-gray-400 rounded sm:gap-4 sm:grid sm:grid-cols-4"
        >
          <div
            class="items-center sm:col-span-3 sm:grid sm:grid-cols-3 justify-items-center"
          >
            <label for="email" class="text-xl">E-mail:</label>
            <input
              id="email"
              class="col-span-2 border-none rounded focus:ring-0 sm:w-full"
              type="text"
            />
          </div>
          <button class="p-2 mt-4 bg-gray-400 rounded sm:mt-0">
            Update E-mail
          </button>
        </form>
        <!-- /E-mail -->
        <!-- Bio -->
        <form
          class="container flex flex-col items-center p-4 mt-4 bg-gray-200 border-4 border-gray-400 rounded sm:gap-4 sm:grid sm:grid-cols-4 justify-items-center"
        >
          <label class="text-xl" for="bio"
            >Bio:<span class="text-base text-gray-600">(auto-save)</span></label
          >
          <textarea
            class="w-full h-24 col-span-3 text-base border-none resize-none focus:ring-0"
          ></textarea>
        </form>
        <!-- /Bio -->
