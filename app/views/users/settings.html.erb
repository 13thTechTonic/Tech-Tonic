  <h1 class="text-3xl">
    Settings for <a href="#" class="text-gray-400">@username</a>
  </h1>
  <div class="container flex flex-col mt-8 lg:flex-row">
    <!-- 設定區 -->
    <section class="order-1 w-full p-4 lg:w-2/3">
      <section>
        <h2 class="text-2xl">Profile</h2>
        <!-- username -->
        <form
          class="container flex flex-col items-center p-4 bg-gray-200 border-4 border-gray-400 rounded sm:gap-4 sm:grid sm:grid-cols-4"
        >
          <div
            class="items-center sm:col-span-3 sm:grid sm:grid-cols-3 justify-items-center"
