<section
  class="flex flex-col items-center w-full max-w-md p-2 mx-auto mb-12 -mt-12 bg-gray-200 border-2 border-black rounded-lg"
  data-controller="sign-switch"
>
  <h2 class="my-8 text-3xl" data-sign-switch-target="title">Login</h2>
  <form class="container flex flex-col items-center">
    <div class="relative mt-8">
      <input
        type="email"
        id="email"
        class="w-full h-12 text-lg border-4 border-black border-solid rounded-lg focus:ring-0 focus:border-current peer focus:border-indigo-500"
        placeholder=" "
      />
      <label
        for="email"
        class="absolute flex items-center w-full h-12 pl-4 text-2xl text-gray-400 duration-200 scale-50 -top-3 -left-14 cursor-text peer-placeholder-shown:scale-100 peer-placeholder-shown:top-0 peer-placeholder-shown:left-0 peer-focus:scale-50 peer-focus:-left-14 peer-focus:-top-3"
        >E-mail</label
      >
    </div>
    <div class="relative mt-8">
      <input
        type="password"
        id="password"
        class="w-full h-12 text-lg border-4 border-black border-solid rounded-lg focus:ring-0 focus:border-current peer focus:border-indigo-500"
        placeholder=" "
      />
      <label
        for="password"
        class="absolute flex items-center w-full h-12 pl-4 text-2xl text-gray-400 duration-200 scale-50 -top-3 -left-14 cursor-text peer-placeholder-shown:scale-100 peer-placeholder-shown:top-0 peer-placeholder-shown:left-0 peer-focus:scale-50 peer-focus:-left-14 peer-focus:-top-3"
        >Password</label
      >
    </div>
    <button
      class="w-1/2 h-12 mt-10 text-lg border-4 border-black border-solid rounded-lg"
      data-sign-switch-target="title"
    >
      Login
    </button>
  </form>
  <div class="container my-4">
    <div
      class="flex items-center before:w-0 before:flex-grow before:content-[''] before:h-0.5 before:bg-black after:flex-grow after:content-[''] after:h-0.5 after:w-0 after:bg-black"
      data-sign-switch-target="links"
    >
      Don't have an account?&nbsp;
      <div
        class="font-medium cursor-pointer"
        data-action="click->sign-switch#clicked"
        data-sign-switch-target="switch"
      >
        Create account
      </div>
    </div>

    <div
      class="flex items-center before:w-0 before:flex-grow before:content-[''] before:h-0.5 before:bg-black after:flex-grow after:content-[''] after:h-0.5 after:w-0 after:bg-black hidden"
      data-sign-switch-target="links"
    >
      or
    </div>
  </div>
  <a
    href=""
    class="flex items-center justify-center hidden w-1/2 h-12 mt-10 text-lg border-4 border-black border-solid rounded-lg"
    data-sign-switch-target="links"
    >Google</a
  >
  <a
    href=""
    class="flex items-center justify-center hidden w-1/2 h-12 mt-10 text-lg border-4 border-black border-solid rounded-lg"
    data-sign-switch-target="links"
    >GitHub</a
  >
  <a
    href=""
    class="flex items-center justify-center hidden w-1/2 h-12 mt-10 text-lg border-4 border-black border-solid rounded-lg"
    data-sign-switch-target="links"
    >Facebook</a
  >

  <div
    class="flex items-center before:w-0 before:flex-grow before:content-[''] before:h-0.5 before:bg-black after:flex-grow after:content-[''] after:h-0.5 after:w-0 after:bg-black hidden"
    data-sign-switch-target="links"
  >
    Already have an account?&nbsp;
    <div
      class="font-medium cursor-pointer"
      data-action="click->sign-switch#clicked"
      data-sign-switch-target="switch"
    >
      Log in.
    </div>
  </div>
</section>
